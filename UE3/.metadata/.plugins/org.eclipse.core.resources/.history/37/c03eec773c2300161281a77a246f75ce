package swt6.soccer.logic;

import swt6.soccer.domain.Bet;
import swt6.soccer.domain.Game;
import swt6.soccer.domain.Team;
import swt6.soccer.domain.SoccerBetSystemUser;

import java.util.List;

/**
 * Soccer service definition
 */
public interface SoccerService {

    SoccerBetSystemUser syncUser(SoccerBetSystemUser user);

    List<Bet> getAllBets();
    
    List<SoccerBetSystemUser> getAllUsers();

    
    Team syncTeam(Team team);

    Team findTeam(Long id);

    List<Team> getAllTeams();
    

    Game syncGame(Game game);
    
    Game findGame(Long id);
    
    List<Game> getAllGames();

	Bet findBet(Long betId);
}