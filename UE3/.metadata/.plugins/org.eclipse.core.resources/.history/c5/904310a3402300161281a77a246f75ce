package swt6.soccer.config;

import java.time.LocalDate;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.stereotype.Component;
import swt6.soccer.domain.Team;
import swt6.soccer.domain.Game;
import swt6.soccer.domain.SoccerBetSystemUser;
import swt6.soccer.logic.SoccerService;

@Component
public class DatabaseInitializer implements CommandLineRunner {
    @Autowired
    private SoccerService soccerService;

    @Override
    public void run(String... args) throws Exception {
        addTeams();
        addUsers();
        addGames();
    }

    private void addUsers() {
        soccerService.syncUser(new SoccerBetSystemUser("Roman","roman@lumetsnet.at"));
        soccerService.syncUser(new SoccerBetSystemUser("Christoph","christoph@lumetsnet.at"));
        soccerService.syncUser(new SoccerBetSystemUser("Thomas","thomas@lumetsnet.at"));
        soccerService.syncUser(new SoccerBetSystemUser("Martin","martin@lumetsnet.at"));
    }

    private void addTeams() {
        soccerService.syncTeam(new Team("Frankreich")); // id 1
        soccerService.syncTeam(new Team("Rumänien")); // id 2
        soccerService.syncTeam(new Team("Albanien")); // id 3
        soccerService.syncTeam(new Team("Schweiz")); // id 4
        
        soccerService.syncTeam(new Team("England")); // id 5
        soccerService.syncTeam(new Team("Russland")); // id 6
        soccerService.syncTeam(new Team("Wales")); // id 7
        soccerService.syncTeam(new Team("Slowakei")); // id 8
        
        soccerService.syncTeam(new Team("Deutschland")); // id 9
        soccerService.syncTeam(new Team("Ukraine")); // id 10
        soccerService.syncTeam(new Team("Polen")); // id 11
        soccerService.syncTeam(new Team("Nordirland")); // id 12 
        
        soccerService.syncTeam(new Team("Spanien")); // id 13
        soccerService.syncTeam(new Team("Tschechien")); // id 14
        soccerService.syncTeam(new Team("Türkei")); // id 15
        soccerService.syncTeam(new Team("Kroatien")); // id 16
        
        soccerService.syncTeam(new Team("Belgien")); // id 17
        soccerService.syncTeam(new Team("Italien")); // id 18
        soccerService.syncTeam(new Team("Irland")); // id 19
        soccerService.syncTeam(new Team("Schweden")); // id 20
        
        soccerService.syncTeam(new Team("Portugal")); // id 21
        soccerService.syncTeam(new Team("Island")); // id 22
        soccerService.syncTeam(new Team("Österreich")); // id 23
        soccerService.syncTeam(new Team("Ungarn")); // id 24
    }
    
    private void addGames() {
    	//Group A
    	addGameForIds(LocalDate.of(2016, 6, 10), 1, 2);
    	addGameForIds(LocalDate.of(2016, 6, 11), 3, 4);
    	addGameForIds(LocalDate.of(2016, 6, 15), 2, 4);
    	addGameForIds(LocalDate.of(2016, 6, 15), 1, 3);
    	addGameForIds(LocalDate.of(2016, 6, 19), 2, 3);
    	addGameForIds(LocalDate.of(2016, 6, 19), 4, 1);
    	
    	//Group B
    	addGameForIds(LocalDate.of(2016, 6, 11), 7, 8);
    	addGameForIds(LocalDate.of(2016, 6, 11), 5, 6);
    	addGameForIds(LocalDate.of(2016, 6, 15), 6, 8);
    	addGameForIds(LocalDate.of(2016, 6, 16), 5, 7);
    	addGameForIds(LocalDate.of(2016, 6, 20), 8, 5);
    	addGameForIds(LocalDate.of(2016, 6, 20), 6, 7);
    	
      	//Group C
    	addGameForIds(LocalDate.of(2016, 6, 12), 11, 12);
    	addGameForIds(LocalDate.of(2016, 6, 12), 9, 10);
    	addGameForIds(LocalDate.of(2016, 6, 16), 10, 12);
    	addGameForIds(LocalDate.of(2016, 6, 16), 9, 11);
    	addGameForIds(LocalDate.of(2016, 6, 21), 10, 11);
    	addGameForIds(LocalDate.of(2016, 6, 21), 12, 9);
    	
      	//Group D
    	addGameForIds(LocalDate.of(2016, 6, 12), 15, 16);
    	addGameForIds(LocalDate.of(2016, 6, 13), 13, 14);
    	addGameForIds(LocalDate.of(2016, 6, 17), 14, 16);
    	addGameForIds(LocalDate.of(2016, 6, 17), 13, 15);
    	addGameForIds(LocalDate.of(2016, 6, 21), 14, 15);
    	addGameForIds(LocalDate.of(2016, 6, 21), 16, 13);
    	
      	//Group E
    	addGameForIds(LocalDate.of(2016, 6, 13), 19, 20);
    	addGameForIds(LocalDate.of(2016, 6, 13), 17, 18);
    	addGameForIds(LocalDate.of(2016, 6, 17), 18, 20);
    	addGameForIds(LocalDate.of(2016, 6, 18), 17, 19);
    	addGameForIds(LocalDate.of(2016, 6, 22), 18, 19);
    	addGameForIds(LocalDate.of(2016, 6, 22), 20, 17);
    	
      	//Group F
    	addGameForIds(LocalDate.of(2016, 6, 14), 23, 24);
    	addGameForIds(LocalDate.of(2016, 6, 14), 21, 22);
    	addGameForIds(LocalDate.of(2016, 6, 18), 22, 24);
    	addGameForIds(LocalDate.of(2016, 6, 18), 21, 23);
    	addGameForIds(LocalDate.of(2016, 6, 22), 22, 23);
    	addGameForIds(LocalDate.of(2016, 6, 22), 24, 21);
    }
    
    private void addGameForIds(LocalDate date, int idTeamA, int idTeamB){
    	Game game = new Game();
    	game.setDate(date);
    	game.setTeamA(soccerService.findTeam((long) idTeamA));
    	game.setTeamB(soccerService.findTeam((long) idTeamB));
        soccerService.syncGame(game);
    }
}