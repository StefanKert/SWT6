package swt6.soccer.config;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.stereotype.Component;
import swt6.soccer.domain.Team;
import swt6.soccer.domain.Game;
import swt6.soccer.domain.SoccerBetSystemUser;
import swt6.soccer.logic.SoccerService;
import swt6.soccer.web.GameController;

@Component
public class DatabaseInitializer implements CommandLineRunner {
    private final Logger logger = LoggerFactory.getLogger(DatabaseInitializer.class);
	
    @Autowired
    private SoccerService soccerService;

    @Override
    public void run(String... args) throws Exception {
        addTeams();
        addUsers();
    }

    private void addUsers() {
        soccerService.syncUser(new SoccerBetSystemUser("Roman","roman@lumetsnet.at"));
        soccerService.syncUser(new SoccerBetSystemUser("Christoph","christoph@lumetsnet.at"));
        soccerService.syncUser(new SoccerBetSystemUser("Thomas","thomas@lumetsnet.at"));
        soccerService.syncUser(new SoccerBetSystemUser("Martin","martin@lumetsnet.at"));
    }

    private void addTeams() {
        soccerService.syncTeam(new Team("Ã–sterreich"));
        soccerService.syncTeam(new Team("Montenegro"));
        soccerService.syncTeam(new Team("Schweden"));
        soccerService.syncTeam(new Team("Russland"));
        soccerService.syncTeam(new Team("Lichtenstein"));
        soccerService.syncTeam(new Team("Moldavien"));
    }
    
    private void addGames() {
    	Game game = new Game();
    	game.setGoalsA(10);
    	game.setGoalsB(5);
    	game.setTeamA(soccerService.findTeam((long) 1));
    	game.setTeamA(soccerService.findTeam((long) 2));
        soccerService.syncGame(new Game());
        soccerService.syncTeam(new Team("Montenegro"));
        soccerService.syncTeam(new Team("Schweden"));
        soccerService.syncTeam(new Team("Russland"));
        soccerService.syncTeam(new Team("Lichtenstein"));
        soccerService.syncTeam(new Team("Moldavien"));
    }
}